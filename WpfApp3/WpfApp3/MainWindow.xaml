                                    Style="{StaticResource {x:Type Path}}"
                                    Data="{StaticResource more}"/>
                            </Button.Content>
                        </Button>
                    </Grid>

                    <!--box folder-->
                    <WrapPanel>
                        <ccontrols:FolderControl                            
                            FolderName="Dribbles"
                            LastChange="Last Change: 22.02.21"/>
                        <ccontrols:FolderControl
                            Margin="20,0"
                            FolderName="My Documents"
                            LastChange="Last Change: 22.02.21"/>
                        <ccontrols:FolderControl
                            FolderName="Databases"
                            LastChange="Last Change: 22.02.21"/>
                    </WrapPanel>

                    <Grid                        
                        Margin="0,20,0,0">
                        <TextBlock                            
                            Foreground="gray"
                            Text="Recent Files"/>
                        <Button
                            Foreground="Silver"
                            BorderBrush="Silver"
                            Width="30"
                            HorizontalAlignment="Right">
                            <Button.Resources>
                                <Style TargetType="{x:Type Border}">
                                    <Setter Property="CornerRadius" Value="5"/>
